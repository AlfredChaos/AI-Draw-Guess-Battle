{
  "llm": {
    "provider": "openai",
    "model_name": "gpt-3.5-turbo",
    "api_key": "",
    "api_base_url": "https://api.openai.com/v1",
    "max_tokens": 150,
    "temperature": 0.7,
    "top_p": 1.0,
    "frequency_penalty": 0.0,
    "presence_penalty": 0.0,
    "timeout": 30,
    "max_retries": 3,
    "retry_delay": 1.0,
    "enable_streaming": false,
    "enable_function_calling": false,
    "system_prompt": "你是一个友好的AI助手，专门帮助玩家进行绘画猜词游戏。",
    "drawing_prompt_template": "请为词汇'{word}'生成一个简单的绘画描述，适合{difficulty}难度。",
    "guessing_prompt_template": "根据这个绘画描述，猜测可能的词汇：{description}",
    "hint_prompt_template": "为词汇'{word}'提供一个{difficulty}难度的提示。"
  },
  "text_to_image": {
    "provider": "openai",
    "model_name": "dall-e-3",
    "api_key": "",
    "api_base_url": "https://api.openai.com/v1",
    "image_size": "1024x1024",
    "image_quality": "standard",
    "image_style": "natural",
    "num_images": 1,
    "guidance_scale": 7.5,
    "num_inference_steps": 50,
    "timeout": 60,
    "max_retries": 2,
    "retry_delay": 2.0,
    "auto_resize": true,
    "target_width": 512,
    "target_height": 512,
    "save_original": true,
    "enable_prompt_enhancement": true,
    "style_suffix": ", simple drawing style, clean lines, minimal details",
    "negative_prompt": "text, watermark, signature, complex details",
    "supported_sizes": ["256x256", "512x512", "1024x1024", "1792x1024", "1024x1792"]
  },
  "cache": {
    "enable_llm_cache": true,
    "enable_image_cache": true,
    "max_llm_cache_size": 100,
    "max_image_cache_size": 50,
    "llm_cache_ttl": 3600,
    "image_cache_ttl": 7200,
    "cache_directory": "cache",
    "llm_cache_file": "llm_cache.json",
    "image_cache_directory": "images",
    "cache_strategy": "lru"
  },
  "behavior": {
    "ai_difficulty_levels": {
      "easy": 0.6,
      "medium": 0.8,
      "hard": 1.0,
      "expert": 1.2
    },
    "default_ai_difficulty": "medium",
    "ai_drawing_speed": 1.0,
    "ai_drawing_accuracy": 0.8,
    "ai_use_hints": true,
    "ai_guessing_delay": 2.0,
    "ai_confidence_threshold": 0.7,
    "ai_max_guesses": 3,
    "ai_personality": "friendly",
    "ai_response_style": "casual",
    "enable_adaptive_difficulty": true,
    "learning_rate": 0.1
  },
  "enable_ai": true,
  "enable_offline_mode": false,
  "fallback_to_local": true,
  "content_filter_enabled": true,
  "rate_limit_requests_per_minute": 60,
  "max_concurrent_requests": 5,
  "log_api_calls": true,
  "log_response_times": true,
  "enable_usage_tracking": true
}