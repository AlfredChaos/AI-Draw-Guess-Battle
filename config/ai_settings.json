{
  "llm": {
    "provider": "openai",
    "model_name": "gpt-3.5-turbo",
    "api_key": "",
    "api_base_url": "https://api.openai.com/v1",
    "max_tokens": 150,
    "temperature": 0.7,
    "top_p": 1.0,
    "frequency_penalty": 0.0,
    "presence_penalty": 0.0,
    "timeout": 30,
    "max_retries": 3,
    "retry_delay": 1.0,
    "enable_streaming": false,
    "enable_function_calling": false,
    "system_prompt": "你是一个友好的AI助手，专门帮助玩家进行绘画猜词游戏。",
    "drawing_prompt_template": "请为词汇'{word}'生成一个简单的绘画描述，适合{difficulty}难度。",
    "guessing_prompt_template": "根据这个绘画描述，猜测可能的词汇：{description}",
    "hint_prompt_template": "为词汇'{word}'提供一个{difficulty}难度的提示。"
  },
  "text_to_image": {
    "provider": "openai",
    "model_name": "dall-e-3",
    "api_key": "",
    "api_base_url": "https://api.openai.com/v1",
    "image_size": "1024x1024",
    "image_quality": "standard",
    "image_style": "natural",
    "num_images": 1,
    "guidance_scale": 7.5,
    "num_inference_steps": 20,
    "target_width": 1024,
    "target_height": 1024,
    "timeout": 60,
    "max_retries": 2,
    "retry_delay": 2.0,
    "enable_safety_checker": true,
    "output_format": "png",
    "save_generated_images": true,
    "image_save_directory": "generated_images",
    "negative_prompt": "text, watermark, signature, complex details"
  },
  "cache": {
    "enable_llm_cache": true,
    "enable_image_cache": true,
    "max_llm_cache_size": 100,
    "max_image_cache_size": 50,
    "llm_cache_ttl": 3600,
    "image_cache_ttl": 7200,
    "cache_directory": "cache",
    "llm_cache_file": "llm_cache.json",
    "image_cache_file": "image_cache.json",
    "auto_cleanup": true,
    "cleanup_interval": 300,
    "compress_cache": false
  },
  "behavior": {
    "creativity_level": 0.8,
    "enable_content_filter": true,
    "enable_prompt_enhancement": true,
    "auto_retry_on_failure": true,
    "fallback_provider": "openai",
    "fallback_model": "gpt-3.5-turbo",
    "max_concurrent_requests": 5,
    "request_rate_limit": 10,
    "enable_logging": true,
    "log_level": "INFO"
  }
}